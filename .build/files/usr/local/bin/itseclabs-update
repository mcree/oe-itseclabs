#!/bin/bash
set -e
tmpdir=$(mktemp -d)
trap "rm -rf $tmpdir" exit
cd $tmpdir
git clone --branch stable https://github.com/mcree/oe-itseclabs.git
cd oe-itseclabs
sudo ansible-playbook --connection=local --inventory localhost, --tags update .build/playbook.yml
echo -e "###################################################"
echo -e "\n   UPDATE FINISHED - REBOOTING VM IN 10 seconds\n"
echo -e "###################################################"
echo "press CTRL-C to cancel reboot"
for i in $(seq 10 -1 0); do
  echo -n "$i ... "
  sleep 1
done
echo -e "\n rebooting..."
sudo shutdown -r now
exit 0
